<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF0F5" tools:context=".ProfileActivity">

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings_pink" android:contentDescription="Cài đặt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FF69B4"/> <TextView
    android:id="@+id/textViewProfileTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TRANG CÁ NHÂN CỦA TỚ! ✨"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#FF69B4"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile_avatar" android:contentDescription="Avatar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textViewProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="#FF1493" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_card_pink"
        app:layout_constraintTop_toBottomOf="@id/textViewDisplayName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView style="@style/ProfileInfoStyle" android:text="💌 Email: cuteuser@mail.com" />
        <View style="@style/DividerPink" />
        <TextView style="@style/ProfileInfoStyle" android:text="📱 Phone: +99 555 222" />
        <View style="@style/DividerPink" />
        <TextView style="@style/ProfileInfoStyle" android:text="🌍 Web: mycuteweb.com" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>